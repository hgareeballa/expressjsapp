<!-- Body -->

<head>
    <meta charset="UTF-8">
    <script src="/js/jquery-3.5.1.min.js"></script>
    <title>Basic CRUD Application - jQuery EasyUI CRUD Demo</title>
    <link rel="stylesheet" type="text/css" href="/css/themes/material-blue/easyui.css">
    <link rel="stylesheet" type="text/css" href="/css/themes/icon.css">
    <link rel="stylesheet" type="text/css" href="/css/themes/color.css">        
    <script type="text/javascript" src="/js/jquery.easyui.min.js"></script>
</head>
<h2><%=title %></h2>
<table id="dg" title="<%=name %> View" class="easyui-datagrid" style="width:800px;height:450px" url="<%=loadurl %>"
    toolbar="#toolbar" pagination="true" rownumbers="true" fitColumns="true" singleSelect="true">
    <thead>
        <tr>
            <% fields.forEach(function(field){ %>
            <th field="<%=field.id %>" width="50"><%=field.name %></th>
            <% }); %>
        </tr>
    </thead>
</table>
<div id="toolbar">
    <a href="javascript:void(0)" class="easyui-linkbutton" iconCls="icon-add" plain="true" onclick="newUser()">New <%=name %></a>
    <a href="javascript:void(0)" class="easyui-linkbutton" iconCls="icon-edit" plain="true" onclick="editUser()">Edit <%=name %></a>
    <a href="javascript:void(0)" class="easyui-linkbutton" iconCls="icon-remove" plain="true"
        onclick="destroyUser()">Remove <%=name %></a>
</div>

<div id="dlg" class="easyui-dialog" style="width:400px"
    data-options="closed:true,modal:true,border:'thin',buttons:'#dlg-buttons'">
    <form id="fm" method="post" novalidate style="margin:0;padding:20px 50px">
        <h3><%=name %> Information</h3>
           <% CRUDfields.forEach(function(field){ %>
              <div style="margin-bottom:10px">
            <input name="<%=field.id %>" class="easyui-textbox" required="true" label="<%=field.name %>:" style="width:100%">
        </div>
            <% }); %>
    </form>
</div>
<div id="dlg-buttons">
    <a href="javascript:void(0)" class="easyui-linkbutton c6" iconCls="icon-ok" onclick="saveUser()"
        style="width:90px">Save</a>
    <a href="javascript:void(0)" class="easyui-linkbutton" iconCls="icon-cancel"
        onclick="javascript:$('#dlg').dialog('close')" style="width:90px">Cancel</a>
</div>
<script type="text/javascript">
    var url;
    function newUser() {
        $('#dlg').dialog('open').dialog('center').dialog('setTitle', 'New <%=name %>');
        $('#fm').form('clear');
        url = '<%=addurl %>';
    }
    function editUser() {
        var row = $('#dg').datagrid('getSelected');
        if (row) {
            $('#dlg').dialog('open').dialog('center').dialog('setTitle', 'Edit <%=name %>');
            $('#fm').form('load', row);
            url = '<%=updateurl %>/' + row.id;
        }
    }
    function saveUser() {
        $('#fm').form('submit', {
            url: url,
            onSubmit: function () {
                return $(this).form('validate');
            },
            success: function (result) {
                var result = eval('(' + result + ')');
                if (result.errorMsg) {
                    $.messager.show({
                        title: 'Error',
                        msg: result.errorMsg
                    });
                } else {
                    $('#dlg').dialog('close');		// close the dialog
                    $('#dg').datagrid('reload');	// reload the user data
                     $.messager.show({	// show error message
                                title: 'Success',
                                msg: result.successMsg
                            });
                }
            }
        });
    }
    function destroyUser() {
        var row = $('#dg').datagrid('getSelected');
        if (row) {
            $.messager.confirm('Confirm', 'Are you sure you want to destroy this user?', function (r) {
                if (r) {
                    $.post('<%=deleteurl %>', { id: row.id }, function (result) {
                        if (result.success) {
                            console.log(result);
                            $('#dg').datagrid('reload');	// reload the user data
                            $.messager.show({	// show error message
                                title: 'Success',
                                msg: result.successMsg
                            });
                        } else {
                            $.messager.show({	// show error message
                                title: 'Error',
                                msg: result.errorMsg
                            });
                        }
                    }, 'json');
                }
            });
        }
    }
</script>